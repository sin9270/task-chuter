{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "node",
    "react",
    "json",
    "html",
    "jest",
    "prettier",
    "simple-import-sort"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "avoid"
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": ["modules"]
      }
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["enzyme", "enzyme-adapter-react-16"]
      }
    ],
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["html-webpack-plugin", "clean-webpack-plugin"]
      }
    ],
    "simple-import-sort/sort": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
